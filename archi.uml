@startuml
' 1103demo项目系统架构图

skinparam componentStyle rectangle
skinparam shadowing false

' 定义组件
package "前端层" {
  [React应用] as frontend
}

package "后端服务层" {
  package "Spring Boot应用" {
    [App主程序] as app
    [Web配置] as webconfig
    
    package "控制器层" {
      [订单控制器] as ordercontroller
    }
    
    package "服务层" {
      [订单服务] as orderservice
    }
    
    package "数据访问层" {
      [订单DAO] as orderdao
      [数据库工具类] as dbutil
    }
    
    package "实体层" {
      [订单实体] as orderentity
    }
  }
}

package "数据存储层" {
  [SQLite数据库] as database
}

' 定义关系
frontend --> ordercontroller : HTTP请求
ordercontroller --> orderservice : 调用
orderservice --> orderdao : 调用
orderdao --> dbutil : 使用
orderdao --> orderentity : 操作
orderdao --> database : 读写
app --> webconfig : 配置
app --> orderdao : 初始化
ordercontroller --> orderentity : 使用
orderservice --> orderentity : 使用
orderdao --> orderentity : 使用

note top of frontend : React\n端口号: 3000
note top of app : Spring Boot\n端口号: 8080
note right of database : SQLite文件数据库\ntest.db

@enduml